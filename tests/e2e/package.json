{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for e-commerce microservices using Cypress",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:headless": "cypress run --headless",
    "test": "cypress run --reporter junit --reporter-options mochaFile=results/cypress-results-[hash].xml,toConsole=true",
    "test:headed": "cypress run --headed --browser chrome"
  },
  "keywords": [
    "cypress",
    "e2e",
    "microservices",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^13.6.0",
    "cypress-multi-reporters": "^1.6.4",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.1"
  }
}
